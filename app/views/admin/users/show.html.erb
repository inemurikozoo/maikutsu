<div class="container">
  <h1 class="mt-3 text-center bg-secondary border border-secondary">会員詳細</h1>
    <div class="col-10-md">

      <div class="table-responsive">
        <table class="table">
          <thead>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
            <% if @user.is_active == true %>
              <p class="text-success fw-bold">有効</p>
            <% else %>
              <p class="text-secondary fw-bold">退会</p>
            <% end %>
            </td>
          </tr>
          </thead>
        </table>
        <div class="row">
	       		<div class="col-md-12 d-flex justify-content-center">
	       				<%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-success' %>
	       		</div>
	       	</div>
      </div>
    </div>
</div>