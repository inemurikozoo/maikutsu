<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">カテゴリ編集</h1>

    <% form_with model: @category, url: admin_category_path, local: true do |f| %>
    <div class="col-10-md">
      <table class="table table-borderless">
        <tr>
          <th>
            <p>カテゴリ名</p>
          </th>
          <td>
            <%= f.text_field :name %>
          </td>
        </tr>
        <tr>
          <th>
            ボタンの色
          </th>
        </tr>
          <td>
            <%= f.color_field :color_code %>
          </td>
        </tr>
      </table>
      <%= f.submit "変更を保存" , class: "btn btn-success" %>
    <% end %>

  </div>
</div>