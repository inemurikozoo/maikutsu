<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">カテゴリ編集</h1>
  <div class="col-10-md">

    <%= form_with model: @category, url: admin_category_path(@category.id), local: true do |f| %>

      <table class="table table-borderless">
        <tr>
          <th>
            カテゴリ名
          </th>
          <td>
            <%= f.text_field :name %>
          </td>
        </tr>
        <tr>
          <th>
            ボタンの色
          </th>
          <td>
              <%= f.color_field :color_code %>
          </td>
        </tr>
      </table>
      <%= f.submit "変更を保存" , class: "btn btn-success" %>
    <% end %>

  </div>
</div>

