<style>
  #Button{
    width: 120px;
    height: 50px;
    text-align: center;
    font-size: 15px;
    font-weight: bold;
    line-height: 50px;
    border: solid 1px #000000;
    border-radius: 10px;
    word-wrap: break-word;
    box-sizing: border-box;
  }
</style>

<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">カテゴリ一覧</h1>
  <div class="col-10-md">

    <% @categories.each do |category| %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>
                カテゴリID
              </th>
              <th>
                カテゴリ名
              </th>
              <th>
                ボタンの色
              </th>
              <th>
                登録中のもの
              </th>
            </tr>
            <tr>
              <td>
                <%= category.id %>
              </td>
              <td>
                <div id="Button">
                  <%= category.name %>
                </div>
              </td>
              <td>
                <%= category.color_code %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_category_path(category.id), class:"btn btn-success" %>
              </td>
            </tr>
          </thead>
        </table>
    <% end %>
      </div>
  </div>
</div>