<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">カテゴリ一覧</h1>

    <%= link_to new_admin_category_path, class: "btn btn-outline-secondary" do %>
      <i class="far fa-folder">
        新規カテゴリ作成
      </i>
    <% end %>
  <div class="col-10-md">


      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>
                カテゴリID
              </th>
              <th>
                カテゴリ表示
              </th>
              <th>
                ボタンの色
              </th>
              <th>
              </th>
            </tr>
            </thead>
            <% @categories.each do |category| %>
            <tr>
              <td>
                <%= category.id %>
              </td>
              <td>
                <div class="Button" style="background-color: <%= category.color_code %>">
                  <%= category.name %>
                </div>
              </td>
              <td>
                <input type="hidden" id="colorCode" class="colorCode" value="<%= @colorCode %>">
                  <%= category.color_code %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_category_path(category.id), class:"btn btn-success" %>
              </td>
            </tr>
            <% end %>
        </table>
        <%= paginate @categories %>
      </div>
  </div>
</div>