<style>
  #Button{
    width: 120px;
    height: 50px;
    text-align: center;
    font-size: 15px;
    font-weight: bold;
    line-height: 50px;
    border: solid 1px #404040;
    border-radius: 10px;
    word-wrap: break-word;
    box-sizing: border-box;
  }
</style>

<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">もの詳細</h1>
  <div class="col-10-md">
    <table class="table table-borderless">
      <tr>
        <th>
          ものの名前
        </th>
        <td>
          <%= @item.name %>
        </td>
      </tr>
      <tr>
        <th>
          カテゴリ
        </th>
        <td>
          <div id="Button">
            <%= @item.category.name %>
          </div>
          <input type="hidden" id="colorCode" value="<%= @colorCode %>">
          </div>
        </td>
      </tr>
      <tr>
        <th>
          保存方法
        </th>
        <td>
            <%= @item.preserve_method %>
        </td>
      </tr>
      <tr>
        <th>
          選び方
        </th>
        <td>
            <%= @item.how_to_choose %>
        </td>
      </tr>
      <tr>
        <th>
          使用期限（目安）
        </th>
        <td>
            <%= @item.limit %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
    <%= link_to "削除する", admin_item_path(@item.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
  </div>
</div>
<script>
  window.onload = function(){
    const colorCode = document.getElementById('colorCode').value;
    document.getElementById('Button').style.backgroundColor = colorCode;
  }
</script>