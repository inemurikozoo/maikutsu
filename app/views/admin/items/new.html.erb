<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">もの新規登録</h1>
  <div class="col-12-md">
    <%= form_with model: @item, url: admin_items_path, method: :post, local: true do |f| %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ものの名前</th>
            <td>
              <%= f.text_field :name, :size => "30" %>
            </td>
          </tr>
          <tr>
            <th>画像選択</th>
            <td>
              <%= f.file_field :image_id, accept: 'image/*' %>
            </td>
          </tr>
          <tr>
            <th>カテゴリ</th>
            <td>
              <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: "選択してください") %>
            </td>
          </tr>
          <tr>
            <th>保存方法</th>
            <td>
              <%= f.text_area :preserve_method, :size => "30" %>
            </td>
          </tr>
          <tr>
            <th>選び方</th>
            <td>
              <%= f.text_area :how_to_choose, :size => "30" %>
            </td>
          </tr>
          <tr>
            <th>使用期限</th>
            <td>
              <%= f.text_area :limit, :size => "30" %>
            </td>
          </tr>
        </thead>
      </table>
      <%= f.submit "確認画面へ", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>