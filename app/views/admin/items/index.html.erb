<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">もの一覧</h1>
  <div class="col-10-md">
    <%= link_to "もの新規登録", new_admin_item_path ,class: "btn btn-primary"%>
      <div class="table-responsive">
        <table class="table">
          <thead>
          <tr>
            <th>ものID</th>
            <th></th>
            <th>なまえ</th>
            <th>カテゴリ</th>
            <th></th>
            </tr>
          </thead>
          <tbody>
          <tr>
          <% @items.each do |item| %>
          <td><%= item.id %></td>
          <td></td>
          <td><%= item.name %></td>
          <td>
            category
          </td>
          <td>
            <%= link_to "詳細へ", admin_item_path(item.id), class: "btn btn-success" %>
          </td>
          </tr>
          </tbody>
          <% end %>
        </table>

      </div>

  </div>
</div>