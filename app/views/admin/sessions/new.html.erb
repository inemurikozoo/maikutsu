<div class="container">
  <h1 class="mt-3 text-center bg-secondary border border-secondary">管理者ログイン</h1>

    <%= form_with model: Admin.new, url: admin_session_path, method: :post, local: true do |f| %>
      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-secondary" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </div>
