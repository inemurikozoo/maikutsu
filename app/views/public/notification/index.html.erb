<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">通知一覧</h1>
  
  <div class="">
  <p>お知らせが全部で<%= @notifications.count %>件あります</p>
  
  
  
  <!--未読のものだけをコントローラーで抽出-->
  <h3 class="mt-3 text-center bg-success border border-secondary">未読の通知</h3>
  
    <table>
      <tr>
        <th>
          通知日  
        </th>
        <th>
          通知の種類
        </th>
        <th>
          内容
        </th>
      </tr>
      <%= @notifications.each do |n| %>
      <tr>
        <td>
          <%= n.date %>
        </td>
        <td>
          <%= n.action %>
        </td>
        <td>
          <%= n.message %>
        </td>
      </tr>
      </table>
    <% end %>
  
  </div>
</div>