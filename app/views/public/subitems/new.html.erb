<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">こもの新規登録</h1>
  <div class="col-10-md">
    <%= form_with model: @sub_item, local: true do |f| %>
      <%= form.fields_for :unit, do |prof| %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>こものの名前</th>
              <td>
                <%= f.text_field :subname, :size => "30" %>
              </td>
            </tr>
            <tr>
              <th>属するもの</th>
              <td>
                <%= f.collection_select(:item_id, Item.all, :id, :name, prompt: "選択してください") %>
              </td>
            </tr>
            <tr>
              <th>単位</th>
              <td>
                <%= prof.text_field :unit_id %>
              </td>
            </tr>
            <tr>
              <th>画像選択</th>
              <td>
                <%= f.file_field :image_id, accept: 'image/*' %>
              </td>
            </tr>

            <tr>
              <th>在庫数</th>
              <td>
                <%= f.text_field :inventory %>
              </td>
            </tr>
            <tr>
              <th>在庫アラート</th>
              <td>
                <%= f.text_field :alert_inventory %>
              </td>
            </tr>
            <tr>
              <th>使用期限アラート</th>
              <td>
                <div class="switchArea">
                  <input type="checkbox" id="switch1">
                  <label for="switch1"><span></span></label>
                  <div id="swImg"></div>
                </div>
                日付入力欄
              </td>
            </tr>
            <tr>
              <th>メモ</th>
              <td>
                <%= f.text_field :memo %>
              </td>
            </tr>
          </thead>
        </table>
        <%= f.submit "確認画面へ", class: "btn btn-success" %>
      <% end %>
    </div>

  </div>
</div>
<style type="text/css">

 /* === ボタンを表示するエリア ============================== */
.switchArea {
  line-height    : 34px;                /* 1行の高さ          */
  letter-spacing : 0;                   /* 文字間             */
  text-align     : center;              /* 文字位置は中央     */
  font-size      : 14px;                /* 文字サイズ         */

  position       : relative;            /* 親要素が基点       */
  margin         : auto;                /* 中央寄せ           */
  width          : 76px;               /* ボタンの横幅       */
  background     : #fff;                /* デフォルト背景色   */
}

 /* === チェックボックス ==================================== */
.switchArea input[type="checkbox"] {
  display        : none;            /* チェックボックス非表示 */
}

 /* === チェックボックスのラベル（標準） ==================== */
.switchArea label {
  display        : block;               /* ボックス要素に変更 */
  box-sizing     : border-box;          /* 枠線を含んだサイズ */
  height         : 34px;                /* ボタンの高さ       */
  border         : 2px solid #999999;   /* 未選択タブのの枠線 */
  border-radius  : 17px;                /* 角丸               */
}

 /* === チェックボックスのラベル（ONのとき） ================ */
.switchArea input[type="checkbox"]:checked +label {
  border-color   : #00b359;             /* 選択タブの枠線     */
}

 /* === 表示する文字（標準） ================================ */
.switchArea label span:after{
  content        : "OFF";               /* 表示する文字       */
  padding        : 0 0 0 20px;          /* 表示する位置       */
  color          : #999999;             /* 文字色             */
}

 /* === 表示する文字（ONのとき） ============================ */
.switchArea  input[type="checkbox"]:checked + label span:after{
  content        : "ON";                /* 表示する文字       */
  padding        : 0 20px 0 0;          /* 表示する位置       */
  color          : #00b359;             /* 文字色             */
}

 /* === 丸部分のSTYLE（標準） =============================== */
.switchArea #swImg {
  position       : absolute;            /* 親要素からの相対位置*/
  width          : 26px;                /* 丸の横幅           */
  height         : 26px;                /* 丸の高さ           */
  background     : #999999;             /* カーソルタブの背景 */
  top            : 4px;                 /* 親要素からの位置   */
  left           : 4px;                 /* 親要素からの位置   */
  border-radius  : 13px;                /* 角丸               */
  transition     : .2s;                 /* 滑らか変化         */
}

 /* === 丸部分のSTYLE（ONのとき） =========================== */
.switchArea input[type="checkbox"]:checked ~ #swImg {
  transform      : translateX(42px);    /* 丸も右へ移動       */
  background     : #00b359;             /* カーソルタブの背景 */
}
</style>