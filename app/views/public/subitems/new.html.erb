<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">こもの新規登録</h1>
  <div class="col-10-md">
    <%= form_with model: @sub_item, url: create_subitem_path, local: true do |f| %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>もの</th>
              <td>
                <%= f.collection_select(:item_id, Item.all, :id, :name, prompt: "選択してください") %>
              </td>
            </tr>
            <tr>
              <th>もののニックネーム,商品名など（任意）</th>
              <td>
                <%= f.text_field :subname, :size => "30" %>
              </td>
            </tr>
            <tr>
              <th>単位</th>
              <td>
                <%= f.text_field :unit %>
              </td>
            </tr>
            <tr>
              <th>画像選択</th>
              <td>
                <%= f.file_field :image_id, accept: 'image/*' %><br>
                ※画像を選択しない場合は、選択したものの画像が自動的に利用されます。
              </td>
            </tr>

            <tr>
              <th>いまの在庫数</th>
              <td>
                <%= f.text_field :inventory %>
              </td>
            </tr>
            <tr>
              <th>在庫アラート</th>
              <td>
                <div class="form-group row">
                  <div class="col-sm-10 btn-group" data-toggle="buttons">
                    <label class="btn btn-outline-primary active" style="width:50%">
                      <%= f.radio_button :alert_inventory, true, {} %> ON
                    </label>
                    <label class="btn btn-outline-primary" style="width:50%">
                      <%= f.radio_button :alert_inventory, false, {} %> OFF
                    </label>
                  </div>
                </div>

              </td>
            </tr>
            <tr>
              <th>使用期限アラート</th>
              <td>
                <div class="form-group row">
                  <div class="col-sm-10 btn-group" data-toggle="buttons">
                    <label class="btn btn-outline-primary active" style="width:50%">
                      <%= f.radio_button :alert_expiration, true, {} %> ON
                    </label>
                    <label class="btn btn-outline-primary" style="width:50%">
                      <%= f.radio_button :alert_expiration, false, {} %> OFF
                    </label>
                    <div class="ms-1">
                      <%= f.date_field :expiration_days, id: "date" %>
                    </div>
                  </div>
              </td>
            </tr>
            <tr>
              <th>メモ</th>
              <td>
                <%= f.text_area :memo %>
              </td>
            </tr>
          </thead>
        </table>
        <%= f.submit "確認画面へ", class: "btn btn-success" %>
      <% end %>
    </div>

  </div>
</div>
<script type="text/javascript">
  function connecttext(d, ischecked){
    if( ischecked == true)
    document.getElementById(dateid).disabled = ""
  }
</script>