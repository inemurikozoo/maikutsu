<script>


  window.addEventListener('DOMContentLoaded', function(){

    //今の在庫の値を取得
    var input_inventory = document.getElementById("now_inventory");

    //いまの在庫の数字が変わったときに、updateを実行する
    input_inventory.addEventListener("change",function(){
      $.ajax(url: 'subitems/:id', type: "PATCH");
    })



  })
</script>


  <div class="container-fluid">
  <h1 class="mt-3 text-center bg-success border border-secondary">こもの詳細</h1>

  <div class="row">
    <div class="col-md-2">
      <%= render 'layouts/genre_side_menu', categories: @categories %>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-6">
          <div class="mono_image">
            gazou
          </div>
          <h2 class="mt-3 text-center bg-light border border-secondary">
            <%= @sub_item.item.name %>
          </h2>
          <h5 class="mt-3 text-center bg-right border border-secondary">
            <%= @sub_item.item.category.name %>
          </h5>
          <div class="">
            <p>いまの在庫</p>
            <h3><%= link_to "－", url: subitem_minus_path, method: :patch, class: "btn btn-success" %></h3>
            <%= form_with model: @sub_item, url: update_subitem_path(@sub_item.id), local: true do |f| %>
            <h3><%= f.text_field :inventory, style: "border: none", size: "1" %></h3>
            <p><%= @sub_item.unit %></p>
            <h3><%= link_to "＋", url: subitem_plus_path, method: :patch, class: "btn btn-success" %></h3>
            <% end %>
          </div>
          <div class="stock_alert">
            <p>在庫アラート</p>

          </div>
    </div>
  </div>
  <script>

  </script>
</div>
