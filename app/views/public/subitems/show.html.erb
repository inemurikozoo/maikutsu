<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">こもの詳細</h1>
    <%= render 'layouts/genre_side_menu', genres: @genres %>
  <div class="col-10-md">
    <%= form_with model: @item, local: true do |f| %>
    <div class="mono_image">
      <%= image_tag %>
    </div>
    <h5 class="mt-3 text-center bg-right border border-secondary">
      <%= @item.name %>
    </h5>

      <%= @item.genre.name %>

    <div class="now_stock">
      <p>いまの在庫</p>

      <h3><%= %></h3>
    </div>
    <div class="stock_alert">
      <p>在庫アラート</p>
      <div class="switchArea">
        <input type="checkbox" id="switch1">
        <label for="switch1"><span></span></label>
        <div id="swImg"></div>
      </div>
    </div>
  </div>
</div>
