<div class="container">
  <h1 class="mt-3 text-center bg-success border border-secondary">こもの一覧</h1>
  <div class="col-10-md">
      <div class="table-responsive">
        <table class="table">
          <thead>
          <tr>
            <th>まとめて選択</th>
            <th>画像</th>
            <th>もの</th>
            <th>ニックネーム</th>
            <th>カテゴリ</th>
            <th>いまの在庫数</th>
            <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @sub_items.each do |sub_item| %>
              <td>
                <%= check_box 1, false %>
              </td>
              <td><!--画像、こもので登録しているかを見て、なければものの画像を表示する処理 --></td>
              <td><%= sub_item.item.name %></td>
              <td><%= sub_item.subname %></td>
              <td><%= sub_item.item.category.name %></td>
              <td><%= sub_item.inventory %></td>
              <td>
                <%= link_to "詳細へ", subitem_path(sub_item.id), class: "btn btn-success" %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
          
      </div>

  </div>
</div>