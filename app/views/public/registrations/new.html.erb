<div class="container">
  <h1 class="mt-3 text-center bg-info border border-secondary">新規会員登録</h1>
  <div class="col-10-md">

    <%= form_with model: @user, url: user_registration_path, id: "new_user", class: "new_user",local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label "ニックネーム" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>(6文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label "パスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions py-4">
        <%= f.submit "登録する", class: "btn btn-success" %>
      </div>
    <% end %>

    <h5 class="py-4">
      <span style="background-color:#f5f5f5">　既に登録済みの方　</span></br>
    </h5>
    <p>
      <%= link_to new_user_session_path do %>こちら<% end %>からログインしてください。

  </div>
</div>