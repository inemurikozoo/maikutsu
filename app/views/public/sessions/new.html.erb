<div class="container">
  <h1 class="mt-3 text-center bg-info border border-secondary">ログイン</h1>
  <div class="col-10-md">

    <%= form_with model: @user, url: new_user_session_path do |f| %>

      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->

      <div class="actions py-4">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>

    <h5 class="py-4">
      	<span style="background-color:#f5f5f5">　会員登録がお済みでない方　</span>
    </h5>
    <p>
      <%= link_to new_user_registration_path do %>こちら<% end %>から新規登録を行ってください。
    </p>
  </div>
</div>